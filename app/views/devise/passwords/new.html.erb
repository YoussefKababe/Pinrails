<h2>Forgot your password?</h2>

<div class="clearfix">
  <div class="well col-sm-4">
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, role: "form" }) do |f| %>
      <% resource.errors.full_messages.each do |msg| %>
        <%= content_tag(:div, msg, class: "alert alert-danger") %>
      <% end %>

      <div class="form-group <%= "has-error" if resource.errors[:email].any? %>">
        <%= f.label :email, class: "control-label" %>
        <%= f.email_field :email, :autofocus => true, class: "form-control" %>
      </div>

      <%= f.submit "Send me reset password instructions", class: "btn btn-primary" %>
      <%= link_to "Cancel", :back, class: "btn btn-default" %>
    <% end %>
  </div>
</div>
