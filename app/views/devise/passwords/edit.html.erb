<h2>Change your password</h2>

<div class="clearfix">
  <div class="well col-sm-4">
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, role: "form" }) do |f| %>
      <% resource.errors.full_messages.each do |msg| %>
        <%= content_tag(:div, msg, class: "alert alert-danger") %>
      <% end %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group <%= "has-error" if resource.errors[:password].any? %>">
        <%= f.label :password, "New password", class: "control-label" %>
        <%= f.password_field :password, :autofocus => true, class: "form-control" %>
      </div>

      <div class="form-group <%= "has-error" if resource.errors[:password_confirmation].any? %>">
        <%= f.label :password_confirmation, "Confirm new password", class: "control-label" %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>

      <%= f.submit "Change my password", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
