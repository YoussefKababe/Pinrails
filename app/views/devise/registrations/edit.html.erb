<h1>Edit <%= resource_name.to_s.humanize %></h1>

<div class="clearfix">
  <div class="well col-sm-6">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }, html: { role: "form"}) do |f| %>
      <% resource.errors.full_messages.each do |msg| %>
        <%= content_tag(:div, msg, class: "alert alert-danger") %>
      <% end %>

      <div class="form-group <%= "has-error" if resource.errors[:name].any? %>">
        <%= f.label :name, class: "control-label" %>
        <%= f.text_field :name, :autofocus => true, class: "form-control" %>
      </div>

      <div class="form-group <%= "has-error" if resource.errors[:email].any? %>">
        <%= f.label :email, class: "control-label" %>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <i>(Currently waiting confirmation for: <%= resource.unconfirmed_email %>)</i>
        <% end %>
        <%= f.email_field :email, class: "form-control" %>
      </div>

      <div class="form-group <%= "has-error" if resource.errors[:password].any? %>">
        <%= f.label :password, class: "control-label" %> <i>(leave blank if you don't want to change it)</i>
        <%= f.password_field :password, :autocomplete => "off", class: "form-control" %>
      </div>

      <div class="form-group <%= "has-error" if resource.errors[:password_confirmation].any? %>">
        <%= f.label :password_confirmation, class: "control-label" %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>

      <div class="form-group <%= "has-error" if resource.errors[:current_password].any? %>">
        <%= f.label :current_password, class: "control-label" %> <i>(we need your current password to confirm your changes)</i>
        <%= f.password_field :current_password, class: "form-control" %>
      </div>

      <%= f.submit "Update", class: "btn btn-primary" %>
      <%= link_to "Cancel", root_path, class: "btn btn-default" %>
    <% end %>
  </div>
</div>

<h3>Cancel my account</h3>

<p>
  Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, class: "btn btn-danger" %>
</p>
